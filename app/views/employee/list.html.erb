<% if @employees.blank? %>
  <p>Hiện tại không có phòng ban nào hoạt động.</p>
<% else %>
  <p style="color: blue">Hiện tại đang có <%= @employees.length %> phòng ban hoạt động:</p>
  <table class="table table-striped">
    <tr>
      <th>STT</th>
      <th>Tên</th>
      <th>Mô tả</th>
      <th colspan="2">Tuỳ chọn</th>
    </tr>
    <% @employees.each do |c| %>
      <tr>
        <td><%= c.id %></td>
        <td><%= link_to c.name, {:action => 'show', :id => c.id} %></td>
        <td><%= c.age %></td>
        <td><%= c.address %></td>
        <td><%= c.birthday %></td>
        <td>
          <%#= link_to 'Cập nhật', {:action => 'edit', :id => c.id} %>
          <%#= link_to "Xoá", {:action => 'delete', :id => c.id} %>
        </td>
      </tr>
    <% end %>
  </table>
<% end %>
<p><%= link_to "Thêm phòng ban", {:action => 'new' }%></p>