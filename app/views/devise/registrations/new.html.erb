
<div class='card'>
  <div class="card-header">
<h2 align="center">Đăng Kí Tài Khoản Mới </h2>
  </div>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-group">
    <%= f.label "Đăng kí email mới" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label 'Mật Khẩu' %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> Kí Tự Nhỏ Nhất )</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password",class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label "Xác Nhận Mật Khẩu " %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"form-control" %>
  </div>

  <div class="btn-lg text-center ">
    <%= f.submit "ĐĂNG KÍ", :class => "btn btn-lg btn-info" %>
  </div>
<% end %>


<%= link_to 'Quay lại', user_list_path,:class => "btn btn-lg btn-primary" %>

</div>
