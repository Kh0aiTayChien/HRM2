<h1>Cập nhật dự án</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @project, :url => { :action => "update", :id => @project } do |f| %>
      <%= render 'shared/validate_project' %>
      <p>Tên: <%= f.text_field 'name', class: 'form-control' %></p>
      <p>Mô tả: <br/>
        <%= f.text_area 'description', class: 'form-control' %></p>
      <p>Phòng ban: <%= f.collection_select :department_id, Department.all, :id, :name %></p>
      <%= f.submit "Lưu thay đổi", class: 'btn btn-primary' %>
    <% end %>
    <%= link_to 'Quay lại', { :action => 'list' } %>
  </div>
</div>