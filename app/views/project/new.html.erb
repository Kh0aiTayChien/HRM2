<h1>Thêm dự án</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_tag :action => 'create' do %>
      <%= render 'shared/validate_project' %>
      <label for="1">Tên</label>:
      <%= text_field 'projects', 'name', class: 'form-control' %>
      <label for="2">Mô tả</label>:
      <%= text_field 'projects', 'description', class: 'form-control' %>
      <label for = "3">Phòng ban đảm nhận</label>:
      <%= collection_select(:projects, :department_id, Department.all, :id, :name, prompt: true) %>
      <br>
      <%= submit_tag "Lưu", class: 'btn btn-primary' %>
    <% end -%>
    <%= link_to 'Quay lại', { :action => 'list' } %>
  </div>
</div>