<h1>Thêm phòng ban</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_tag :action => 'create' do %>
      <%= render 'shared/validate_dpm' %>
      <label for="1">Tên</label>:
      <%= text_field 'departments', 'name', class: 'form-control' %>
      <label for="2">Mô tả</label>:
      <%= text_area 'departments', 'description', class: 'form-control' %>
      <%= submit_tag "Lưu", class: 'btn btn-primary' %>
    <% end %>
    <%= link_to 'Quay lại', { :action => 'index' } %>
  </div>
</div>

